<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".delete_security"
    android:background="@color/dgreen">


    <Button
        android:id="@+id/deleteBtn"
        android:layout_width="142dp"
        android:layout_height="47dp"
        android:layout_marginStart="160dp"
        android:layout_marginEnd="163dp"
        android:layout_marginBottom="340dp"
        android:background="@color/red"
        android:text="Remove Security"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="406dp"
        android:layout_height="79dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">>
        <TextView
            android:id="@+id/textView13"
            android:layout_width="335dp"
            android:layout_height="62dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:paddingLeft="100dp"
            android:paddingTop="20dp"
            android:text="Delete Security"
            android:textSize="24dp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="90dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/removepersonicon" />


    </LinearLayout>


    <EditText
        android:id="@+id/secID"
        android:layout_width="121dp"
        android:layout_height="33dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/deleteBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8"
        app:layout_constraintVertical_bias="0.884" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="129dp"
        android:layout_height="31dp"
        android:layout_marginStart="171dp"
        android:layout_marginTop="114dp"
        android:layout_marginEnd="182dp"
        android:layout_marginBottom="22dp"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:text="Security ID"
        app:emojiCompatEnabled="false"
        app:layout_constraintBottom_toTopOf="@+id/secID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8"
        app:layout_constraintVertical_bias="0.692" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="418dp"
        android:layout_height="6dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="268dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deleteBtn"
        app:srcCompat="@drawable/skrcolor" />

</androidx.constraintlayout.widget.ConstraintLayout>